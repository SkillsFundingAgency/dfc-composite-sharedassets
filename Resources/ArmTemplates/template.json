{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "cdnEndPointName": {
        "type": "string",
        "metadata": {
          "description": "Endpoint in the CDN to create"
        }
      },
      "cdnProfileName": {
        "type": "string",
        "metadata": {
          "description": "Existing CDN profile name"
        }
      },
      "cdnProfileResourceGroup": {
        "type": "string",
        "metadata": {
          "description": "Resource group that the CDN profile is part of"
        }
      },
      "customCdnFqdn": {
        "type": "string",
        "defaultValue": "",
        "metadata": {
          "description": "Endpoint in the CDN to create"
        }
      },
      "originHostName": {
        "type": "string",
        "metadata": {
          "description": "URL to get the assets from"
        }
      }
    },
    "variables": {
      "deploymentUrlBase": "https://raw.githubusercontent.com/SkillsFundingAgency/dfc-devops/master/ArmTemplates/"
    },
    "resources": [
      {
        "name": "exploreCareersAssetsCDN",
        "type": "Microsoft.Resources/deployments",
        "resourceGroup": "[parameters('cdnProfileResourceGroup')]",
        "apiVersion": "2017-05-10",
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "[concat(variables('deploymentUrlBase'),'CDN/cdn-endpoint.json')]",
            "contentVersion": "1.0.0.0"
          },
          "parameters": {
            "cdnProfileName": {
              "value": "[parameters('cdnProfileName')]"
            },
            "cdnEndPointName": {
              "value": "[parameters('cdnEndPointName')]"
            },
            "originHostName": {
              "value": "[parameters('originHostName')]"
            },
            "customDomainName": {
              "value": "[parameters('customCdnFqdn')]"
            },
            "queryStringCachingBehavior": {
              "value": "UseQueryString"
            }
          }
        }
      }
    ]
  }